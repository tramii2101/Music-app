<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_authen"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/enterOtpFragment"
        android:name="com.example.musicapp.ui.authen.EnterOtpFragment"
        android:label="fragment_enter_otp"
        tools:layout="@layout/fragment_enter_otp">
        <action
            android:id="@+id/action_enterOtpFragment_to_newPasswordFragment"
            app:destination="@id/newPasswordFragment" />
        <action
            android:id="@+id/action_enterOtpFragment_to_forgotPasswordMethodFragment"
            app:destination="@id/forgotPasswordMethodFragment" />
    </fragment>
    <fragment
        android:id="@+id/forgotPasswordMethodFragment"
        android:name="com.example.musicapp.ui.authen.ForgotPasswordMethodFragment"
        android:label="fragment_forgot_password_method"
        tools:layout="@layout/fragment_forgot_password_method">
        <action
            android:id="@+id/action_forgotPasswordMethodFragment_to_enterOtpFragment"
            app:destination="@id/enterOtpFragment" />
        <action
            android:id="@+id/action_forgotPasswordMethodFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/newPasswordFragment"
        android:name="com.example.musicapp.ui.authen.NewPasswordFragment"
        android:label="fragment_new_password"
        tools:layout="@layout/fragment_new_password">
        <action
            android:id="@+id/action_newPasswordFragment_to_enterOtpFragment"
            app:destination="@id/enterOtpFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.musicapp.ui.authen.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_forgotPasswordMethodFragment"
            app:destination="@id/forgotPasswordMethodFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.musicapp.ui.authen.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
</navigation>